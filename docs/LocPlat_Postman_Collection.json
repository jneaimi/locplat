    {
      "name": "Language Direction",
      "item": [
        {
          "name": "Check Arabic Direction (RTL)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/translate/language-direction/ar",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "translate", "language-direction", "ar"]
            },
            "description": "Check if Arabic is RTL (Right-to-Left) - should return true"
          },
          "response": []
        },
        {
          "name": "Check English Direction (LTR)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/translate/language-direction/en",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "translate", "language-direction", "en"]
            },
            "description": "Check if English is LTR (Left-to-Right) - should return false for is_rtl"
          },
          "response": []
        },
        {
          "name": "Check Bosnian Direction (LTR)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/translate/language-direction/bs",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "translate", "language-direction", "bs"]
            },
            "description": "Check if Bosnian is LTR (Left-to-Right)"
          },
          "response": []
        }
      ]
