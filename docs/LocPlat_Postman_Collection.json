      "name": "Health Check",
      "item": [
        {
          "name": "Service Health Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check if all services (API, database, Redis) are operational"
          },
          "response": []
        }
      ]
    },
    {
