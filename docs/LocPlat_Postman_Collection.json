            "body": {
              "mode": "raw",
              "raw": "{\n  \"api_key\": \"{{openai_api_key}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/translate/validate/openai",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "translate", "validate", "openai"]
